#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import adaptive_height kivymd.uix.MDAdaptiveWidget
#:import utils kivy.utils

#: import NoTransition kivy.uix.screenmanager.NoTransition


<StartPage>:
    FloatLayout:
        FitImage:
            source: 'libs/screens/green2.jpg'
        BoxLayout:
            orientation: 'vertical'

            Label:
                size_hint: (1, 1)
                text: 'welcome to kivy app'
                font_size: 24
                font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                color: get_color_from_hex("#004242")

                pos_hint: {'center_x': 0.5, 'top': 0.3}
            FloatLayout:
                Button:
                    size_hint: None, None
                    size: 252, 252
                    pos_hint:  {'center_x': 0.5, 'y': 0.49}
                    background_normal:'libs/screens/kiwi2.png'
                    background_down:'libs/screens/kiwi2.png'

                    font_size: 60
                    #color: get_color_from_hex("#83F8FF")
                    font_color_down:get_color_from_hex("#004242")
                    font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                    on_release:
                        root.manager.transition = NoTransition()
                        root.manager.current = 'Lessons'







