#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import adaptive_height kivymd.uix.MDAdaptiveWidget
#:import utils kivy.utils

<HomePage>:
    FloatLayout:
        FitImage:
            source: 'libs/screens/green2.jpg'
        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, 0.3
                    pos_hint:  { 'y': 1}
                    text: 'Lessons'
                    font_size: 24
                    font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                    color: get_color_from_hex("#004242")

                Button:
                    size_hint: None, None
                    size: 300, 141
                    pos_hint:  {'center_x': 0.5, 'top': 0}
                    background_normal:'libs/screens/buttons2.png'
                    background_down:'libs/screens/buttons2.png'
                    on_release:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'Lessons'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    size_hint: 1, 0.3
                    pos_hint:  { 'y': 1}
                    text: 'Tests'
                    font_size: 24
                    font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                    color: get_color_from_hex("#004242")

                Button:
                    size_hint: None, None
                    size: 300, 141
                    pos_hint:  {'center_x': 0.5, 'top': 0}
                    background_normal:'libs/screens/buttons2.png'
                    background_down:'libs/screens/buttons2.png'
                    on_release:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'Tests'





