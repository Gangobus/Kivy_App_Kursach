#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import adaptive_height kivymd.uix.MDAdaptiveWidget
#:import utils kivy.utils

<HomePage>:
    FloatLayout:
        FitImage:
            source: 'libs/screens/rm2.jpg'
        BoxLayout:
            orientation: 'vertical'

            FloatLayout:
                Button:
                    size_hint: None, None
                    size: 218, 218
                    pos_hint:  {'center_x': 0.5, 'center_y': 0.4}
                    background_normal:'libs/screens/button1.png'
                    background_down:'libs/screens/button2.png'
                    text: 'LESSONS'
                    font_size: 30
                    font: get_color_from_hex("#83F8FF")
                    font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                    on_release:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'GO'
            FloatLayout:
                Button:

                    size_hint: None, None
                    size: 218,218
                    pos_hint:  {'center_x': 0.5, 'center_y': 0.6}
                    background_normal:'libs/screens/button1.png'
                    background_down:'libs/screens/button2.png'
                    text: 'TESTS'
                    font_size: 30
                    font: get_color_from_hex("#83F8FF")
                    font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                    on_release:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'GO'





