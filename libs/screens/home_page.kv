    orientation:'vertical'
    MDBoxLayout:
        orientation: 'vertical'
        valign: 'top'

        #Appbar
        MDBoxLayout:
            padding: '5dp'
            adaptive_height: True

            MDIconButton:
                icon: 'school'
            MDLabel:
                text: 'KivyApp'
                halign: 'center'
                valign: 'top'
                font_size: 25
                font_name: 'libs/screens/fonts/Instafont.otf'

            MDIconButton:
                icon: 'facebook-messenger'

    MDBoxLayout:
        ScrollView:
            bar_width: 0

            MDBoxLayout:
                adaptive_height: True

                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
