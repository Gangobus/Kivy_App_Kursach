#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import adaptive_height kivymd.uix.MDAdaptiveWidget
#:import utils kivy.utils
#: import NoTransition kivy.uix.screenmanager.NoTransition

<LessonsPage>:
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            FloatLayout:
                pos_hint: {'center_x': 0.5, 'top': 0.5}
                FitImage:
                    source: 'libs/screens/green2.jpg'
                Label:
                    text: "It's Lessons Page"
                    font_size: 26
                    font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                    color: get_color_from_hex("#004242")



    MDBoxLayout:
        md_bg_color: get_color_from_hex("#E7FCB8")
        adaptive_height: True
        spacing: 30
        padding: 6


        Label:

        MDIconButton:
            icon: 'school'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Lessons'

        MDIconButton:
            icon: 'format-list-text'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Tests'

        MDIconButton:
            icon: 'home'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Go'

        MDIconButton:
            icon: 'controller'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Game'

        MDIconButton:
            icon: 'youtube-subscription'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Videos'
        Label:

