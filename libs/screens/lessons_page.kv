<PostCard>:
    MDCard:
        pos_hint: {'center_x': .5}
        md_bg_color:get_color_from_hex("#E7FCB8")
        size_hint_y: None
        height: 200
        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                #id: l_number
                text: f'{root.titlel}'
                #text: f'[b][size=14]{root.namelesson}[/size][/b]'
                font_size: 10
                font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                color: get_color_from_hex("#004242")#
            MDLabel:
                text: f'{root.textlesson}'
                font_size: 10
                font_name: 'libs/screens/fonts/Bungee-Regular.ttf'
                color: get_color_from_hex("#004242")

<LessonsPage>:
    MDBoxLayout:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDBoxLayout:
                spacing: 210
                padding:20
                orientation: 'vertical'
                adaptive_height: True
                bar_width: 0
                id: timeline


    MDBoxLayout:#buttom bar
        md_bg_color: get_color_from_hex("#E7FCB8")
        adaptive_height: True
        spacing: 30
        padding: 6


        Label:

        MDIconButton:
            icon: 'school'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Lessons'

        MDIconButton:
            icon: 'format-list-text'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Tests'

        MDIconButton:
            icon: 'home'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Go'

        MDIconButton:
            icon: 'controller'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Game'

        MDIconButton:
            icon: 'youtube-subscription'
            on_release:
                root.manager.transition = NoTransition()
                root.manager.current = 'Videos'
        Label:

